/* pages/detail/detail.wxss */

Page {
  background-color: #f0e68c;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.2;
  z-index: 2;
}

.drawer-box {
  width: 100%;
  height: 50%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 3;
}

.drawer-box image {
  width: 40rpx;
  height: 40rpx;
  margin: 16rpx;
  float: right;
}

.drawer-box button {
  width: 400rpx;
  height: 96rpx;
  line-height: 96rpx;
  color: white;
  background-color: #a62539;
  position: fixed;
  bottom: 16rpx;
  left: 50%;
  margin-left: -200rpx;
}
